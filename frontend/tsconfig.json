{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",

    "baseUrl": ".",                     // ðŸ‘ˆ Add this line
    "paths": {                          // ðŸ‘ˆ And this block
      "@/*": ["src/*"]
    }
  },
  "include": ["src"]
}
